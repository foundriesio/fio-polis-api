{
  "name": "@foundriesio/polis-api",
  "version": "2.0.2",
  "private": false,
  "description": "Polis API wrapper",
  "main": "dist/main.js",
  "engines": {
    "node": ">= 12"
  },
  "files": [
    "dist/*.js",
    "LICENSE.md",
    "package-lock.json",
    "src"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "prepare": "npm run build",
    "build": "NODE_ENV=production webpack --progress",
    "build:test": "NODE_ENV=test webpack --display none",
    "lint": "prettier *.md *.js ./src/*.js ./src/**/*.js  --write",
    "pretest": "npm run build:test",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "src/**/*.+(js|md|css|scss|yaml|json)": [
      "eslint --config src/.eslintrc.json --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foundriesio/fio-polis-api.git"
  },
  "author": "Milo Casagrande <milo@foundries.io>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/foundriesio/fio-polis-api/issues"
  },
  "homepage": "https://github.com/foundriesio/fio-polis-api#readme",
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.18.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "webpack": "^5.16.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "node-fetch": "^2.6.1"
  }
}
